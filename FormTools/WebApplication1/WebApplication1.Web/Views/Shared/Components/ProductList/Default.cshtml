@model ProductListComponentViewModel

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.productsList)
		{
			<tr>
				<td>
					@item.Id
				</td>
				<td>
					@item.Name
				</td>
				<td>
					@item.Description
				</td>
			</tr>			
		}
		
	</tbody>
</table>