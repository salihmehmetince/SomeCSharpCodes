
@{
    ViewData["Title"] = "add";
}

<h1>Add</h1>

<form asp-controller="Product" asp-action="addProduct" method="post">
    <label>Name:</label>
    <input type="text" name="pName" />
    <br />
    <label>Type:</label>
    <input type="text" name="pType" />
    <br />
    <label>Price:</label>
    <input type="text" name="pPrice" />
    <br />
    <label>Color:</label>
    <input type="text" name="pColor" />
    <br />
    <label>Height:</label>
    <input type="text" name="pHeight" />
    <br />
    <label>Width:</label>
    <input type="text" name="pWidth" />
    <br />
    <button type="submit">Add product</button>
</form>

