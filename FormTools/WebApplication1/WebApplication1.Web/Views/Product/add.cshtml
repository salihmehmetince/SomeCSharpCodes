
@{
    ViewData["Title"] = "add";
}

<h1>Add</h1>
@model Product
<form asp-controller="Product" asp-action="addProduct" method="post">
    <label>Name:</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Type:</label>
    <input type="text" asp-for="Type"/>
    <br />
    <label>Price:</label>
    <input type="text" asp-for="Price"/>
    <br />
    <label>Color:</label>
    <input type="text" asp-for="Color"/>
    <br />
    <label>Height:</label>
    <input type="text" asp-for="Height"/>
    <br />
    <label>Width:</label>
    <input type="text" asp-for="Width"/>
    <br />
    <button type="submit">Add product</button>
</form>

