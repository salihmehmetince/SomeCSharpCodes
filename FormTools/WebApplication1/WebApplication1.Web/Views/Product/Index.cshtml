@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model List<Product>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>

            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
    </tbody>
</table>
